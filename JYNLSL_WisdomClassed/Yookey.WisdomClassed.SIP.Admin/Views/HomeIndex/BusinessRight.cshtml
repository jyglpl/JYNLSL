@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Page</title>
    <link href="@Url.Content("~/Content/Main/css/border.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Content/Main/js/learunui-framework.js")"></script>
    <!--引入时间组件start-->
    <script src="@Url.Content("~/Librarys/datepicker/WdatePicker.js")"></script>
    <!--引入时间组件end-->
    <style type="text/css">
        .txt {
            border: 1px solid #A8A8A8;
            padding: 3px 3px 4px 2px;
            height: 15px;
            line-height: 15px;
            border-radius: 6px;
        }

        .sel > p span, .dataBox .toDoWith .titleleftFirst > p span {
            cursor: pointer;
            display: inline-block;
            width: 55px;
            height: 25px;
            line-height: 25px;
            color: #777;
            background-color: #e5e5e5;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="contentAll clearfixed">
        <div class="content_left">
            <!-- 实时数据 -->
            <div class="bg_white clearfixed content_left1">
                <div class="title">实时数据</div>
                <div class="clearfixed">
                    <div class="fl">
                        <ul class="con_ul clearfixed">
                            <li>
                                <div class="font1 name">行政处罚</div>
                                <div class="font2 mb">@ViewBag.TotalPunishmentCount</div>
                            </li>
                            <li>
                                <div class="font1 name">处罚金额</div>
                                <div class="font3">0</div>
                            </li>
                            <li>
                                <div id="aircleOne" style="width: 80px; height: 80px" class="fl"></div>
                                <div class="fl banjie">
                                    <div class="font8">0%</div>
                                    <div>办结率</div>
                                </div>
                            </li>
                            <li class="border1">
                                <div class="name font5">1000</div>
                                <div class="font4">违法停车</div>
                            </li>
                            <li class="border2">
                                <div class="name font5">1000</div>
                                <div class="font4">教育纠处</div>
                            </li>
                        </ul>
                        @*<div class="font4 ul_bt">行政处罚人均案件<span>3</span>起</div>*@
                    </div>
                    <div class="fl con_div" style="overflow: hidden">
                        <div class="font4">双随机抽查<span class="col059">@ViewBag.DoubleRandomCount</span>次,检查对象<span class="col0c9">@ViewBag.DoubleRandomObjCount</span>个</div>
                        @*<div class="font4">检查问题<span class="colef3">52</span>次,已整改<span class="col059">25</span>个</div>*@
                        <div class="font4">双随机督查<span class="col11a">@ViewBag.RandomInspectorCount</span>次,督查对象<span class="colc6b">@ViewBag.RandomInspectorObjCount</span>个</div>
                        @*<div class="font4">检查问题<span class="colef3">256</span>次,扣除分数<span class="coldf8">25</span>个</div>*@
                    </div>
                </div>
            </div>
            <!-- 占比分析 -->
            <div class="content_left2 bg_white pos_rel">
                <div class="title">占比分析</div>
                <div id="aircleTwo" style="width: 100%; height: 260px;"></div>
                <div class="sel">
                    <p>
                        <span class="yearbt1">本年</span>
                        <span class="monthbt1">本月</span>
                    </p>
                </div>
            </div>
            <!-- 违法行为Top10 -->
            <div class="content_left3 bg_white pos_rel">
                <div class="title">违法行为Top10</div>
                <div id="aircleThree" style="width: 100%; height: 380px;"></div>
                <div class="sel">
                    <p>
                        <span class="yearbt">本年</span>
                        <span class="monthbt">本月</span>
                    </p>
                </div>
            </div>
        </div>
        <div class="content_right">
            <!-- 案例分布 -->
            <div class="content_right1 bg_white">
                <div class="title">案件分类情况</div>
                <div id="aircleFour" style="width: 100%; height: 280px;"></div>
            </div>
            <!-- 静态数据 -->
            <div class="content_right2 bg_white">
                <div class="title jt_pad">静态数据</div>
                <div class="jt_total clearfixed">
                    <div class="fl pos_rel tot1">
                        <img src="~/Content/Main/images/icon1.png" alt="" class="icon1">
                        <div class="font5 total_num">449</div>
                        <div class="font6">执法力量</div>
                    </div>
                    <div class="fl tot2 ">
                        <div class="pos_rel mb15">
                            <div class="manBox">
                                <div class="manTol1"></div>
                            </div>
                            <div class="manText">
                                <div class="man1">152</div>
                                <div class="font7">在编人员</div>
                            </div>
                        </div>
                        <div class="pos_rel">
                            <div class="manBox">
                                <div class="manTol2"></div>
                            </div>
                            <div class="manText">
                                <div class="man1">297</div>
                                <div class="font7">非在编人员</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="right2_list">
                    <ul>
                        <li>
                            <span class="col33">市容市政&nbsp;</span>
                            <span class="colaea">行政处罚事项<span class="col005">137</span>;&nbsp;</span>
                            <span class="colaea">行政强制事项<span class="colef6">0</span>&nbsp;</span>
                        </li>
                        <li>
                            <span class="col33">安全生产&nbsp;</span>
                            <span class="colaea">行政处罚事项<span class="col005">256</span>;&nbsp;</span>
                            <span class="colaea">行政强制事项<span class="colef6">10</span>&nbsp;</span>
                        </li>
                        <li>
                            <span class="col33">园林绿化&nbsp;</span>
                            <span class="colaea">行政处罚事项<span class="col005">36</span>;&nbsp;</span>
                            <span class="colaea">行政强制事项<span class="colef6">0</span>&nbsp;</span>
                        </li>
                        <li>
                            <span class="col33">规划建设&nbsp;</span>
                            <span class="colaea">行政处罚事项<span class="col005">675</span>;&nbsp;</span>
                            <span class="colaea">行政强制事项<span class="colef6">9</span>&nbsp;</span>
                        </li>
                        <li>
                            <span class="col33">水利领域&nbsp;</span>
                            <span class="colaea">行政处罚事项<span class="col005">132</span>;&nbsp;</span>
                            <span class="colaea">行政强制事项<span class="colef6">0</span>&nbsp;</span>
                        </li>
                        <li>
                            <span class="col33">国土领域&nbsp;</span>
                            <span class="colaea">行政处罚事项<span class="col005">85</span>;&nbsp;</span>
                            <span class="colaea">行政强制事项<span class="colef6">0</span>&nbsp;</span>
                        </li>
                        <li>
                            <span class="col33">渔政&nbsp;</span>
                            <span class="colaea">行政处罚事项<span class="col005">154</span>;&nbsp;</span>
                            <span class="colaea">行政强制事项<span class="colef6">4</span>&nbsp;</span>
                        </li>
                    </ul>
                </div>
                <div class="right2_bottom clearfixed">
                    <div class="bottom">
                        <img src="~/Content/Main/images/icon3.png" alt="">
                        <div class="bottomText">
                            <div class="mt10 colaea">监管对象</div>
                            <div class="col0cb">161</div>
                        </div>
                    </div>
                    <div class="bottom">
                        <img src="~/Content/Main/images/icon2.png" alt="">
                        <div class="bottomText">
                            <div class="mt10 colaea">重点路段</div>
                            <div class="colb29">59</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="@Url.Content("~/Content/Main/js/echarts.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/Main/js/jquery.js")"></script>
    <script>
        $(".yearbt").click(function () {
            $(".yearbt").attr("style", "color:blue;")
            $(".monthbt").attr("style", "color:#777;")
        });
        $(".monthbt").click(function () {
            $(".monthbt").attr("style", "color:blue;")
            $(".yearbt").attr("style", "color:#777;")
        });
        $(".yearbt1").click(function () {
            $(".yearbt1").attr("style", "color:blue;")
            $(".monthbt1").attr("style", "color:#777;")
        });
        $(".monthbt1").click(function () {
            $(".monthbt1").attr("style", "color:blue;")
            $(".yearbt1").attr("style", "color:#777;")
        });
        $('.leftListNav').height($(".rightContent").outerHeight());
        var A_num1 = parseInt($('.manTol1').parent().siblings('.manText').find('.man1').text());
        var A_num2 = parseInt($('.total_num').text());
        var A_num = ((A_num1 / A_num2) * 100).toFixed(2);
        $('.manTol1').height(A_num + "%");

        var B_num1 = parseInt($('.manTol2').parent().siblings('.manText').find('.man1').text());
        var B_num2 = parseInt($('.total_num').text());
        var B_num = ((B_num1 / B_num2) * 100).toFixed(2);

        $('.manTol2').height(B_num + "%");

        $('#menu li').hover(function () {
            $(this).find('.secList').show()
        }, function () {
            $(this).find('.secList').hide()
        });

        function myChart1() {
            var myChart = echarts.init(document.getElementById('aircleTwo'));
            myChart.setOption(option = {
                tooltip: {
                    trigger: 'axis'
                },
                legend: {
                    data: ['一般案件', '教育纠处', '违法停车']
                },
                grid: {
                    x: 30,
                    y: 25,
                    x2: 30,
                    y2: 25
                },
                xAxis: [
                    {
                        type: 'category',
                        data: ['湖东社工委', '湖西社工委', '月亮湾社工委', '东沙湖社工委', '娄葑街道', '唯亭街道', '斜塘街道', '胜浦街道'],
                        splitLine: { show: false },//去除网格线
                    }
                ],
                yAxis: [
                    {
                        type: 'value',
                    }
                ],
                series: [
                    {
                        name: '一般案件',
                        type: 'bar',
                        data: [2.0, 4.9, 7.0, 23.2, 25.6, 76.7, 135.6, 162.2, 32.6, 20.0, 6.4, 3.3],
                    },
                    {
                        name: '教育纠处',
                        type: 'bar',
                        data: [2.0, 4.9, 7.0, 23.2, 25.6, 76.7, 135.6, 162.2, 32.6, 20.0, 6.4, 3.3],
                    },
                    {
                        name: '违法停车',
                        type: 'bar',
                        data: [2.0, 4.9, 7.0, 23.2, 25.6, 76.7, 135.6, 162.2, 32.6, 20.0, 6.4, 3.3],
                    }
                ]
            });
        }
        myChart1();
        function myChart2() {
            var myChart = echarts.init(document.getElementById('aircleThree'));
            myChart.setOption(option = {
                tooltip: {
                    trigger: 'axis'
                },
                grid: {
                    x: 30,
                    y: 25,
                    x2: 30,
                    y2: 25
                },

                xAxis: [
                    {
                        type: 'category',
                        data: ['违法停车', '乱丢垃圾', '占道经营', '无证设摊', '随地吐痰', '高音揽客', '流动摊贩', '违反市容', '夜间施工', '倾倒垃圾'],
                        splitLine: { show: false },//去除网格线
                    }
                ],
                yAxis: [
                    {
                        type: 'value',
                    }
                ],
                series: [
                    {
                        name: '一般案件',
                        type: 'bar',
                        itemStyle: {
                            normal: {
                                color: "#39acff"
                            }
                        },
                        data: [162.2, 135.6, 76.7, 32.6, 25.6, 23.2, 20.0, 7.0,  4.9, 2.0],
                        barWidth: 30
                    }
                ]
            });
        }

        myChart2();

        function myChart3() {
            var myChart = echarts.init(document.getElementById('aircleFour'));
            myChart.setOption(option = {
                tooltip: {
                    trigger: 'item',
                    formatter: "{a} <br/>{b} : {c} ({d}%)"
                },
                legend: {
                    orient: 'vertical',
                    x: 'right',
                    data: ['城管', '国土', '渔政', '安监'],
                    y: 100,
                    itemGap: 20,
                    textStyle: {
                        fontSize: 16
                    }
                },
                color: ['#e67960', '#33a7ff', '#d29cff', '#ff87b9'],

                series: [
                    {
                        name: '访问来源',
                        type: 'pie',
                        radius: '55%',
                        center: ['50%', '60%'],
                        data: [
                            { value: 335, name: '城管' },
                            { value: 310, name: '安监' },
                            { value: 234, name: '渔政' },
                            { value: 135, name: '国土' }
                        ]
                    }
                ]
            });
        }

        myChart3()

        function myChart4() {
            var myChart = echarts.init(document.getElementById('aircleOne'));
            var dataStyle = {
                normal: {
                    label: { show: false },
                    labelLine: { show: false }
                }
            };
            var placeHolderStyle = {
                normal: {
                    color: '#f5f5f5',
                    label: { show: false },
                    labelLine: { show: false }
                },
                emphasis: {
                    color: 'rgba(0,0,0,0)'
                }
            };
            var placeHolderStyle1 = {
                normal: {
                    color: '#fff',
                    label: { show: false },
                    labelLine: { show: false }
                },
                emphasis: {
                    color: 'rgba(0,0,0,0)'
                }
            };
            myChart.setOption(option = {
                title: {
                    text: '0%',
                    x: 'center',
                    y: 'center',

                    textStyle: {
                        color: '#0171da',
                        fontFamily: '微软雅黑',
                        fontSize: 18,
                        fontWeight: 600
                    }
                },
                series: [
                    {
                        name: '1',
                        type: 'pie',
                        clockWise: false,
                        radius: [30, 40],
                        itemStyle: dataStyle,
                        data: [
                            {
                                value: 0,
                                name: '68%的人表示过的不错',
                                itemStyle: placeHolderStyle1
                            },
                            {
                                value: 100,
                                name: 'invisible',
                                itemStyle: placeHolderStyle
                            }
                        ]
                    }
                ]
            })
        }

        myChart4();
    </script>
</body>
</html>
