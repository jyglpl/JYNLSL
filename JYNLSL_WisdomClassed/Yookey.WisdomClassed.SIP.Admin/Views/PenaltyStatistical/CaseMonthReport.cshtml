    /*
     * 月份阿拉伯数字转大小
     */
    function GetMonth(months) {
        var month = "";
        switch (months) {
            case "1":
                month = "一";
                break;
            case "2":
                month = "二";
                break;
            case "3":
                month = "三";
                break;
            case "4":
                month = "四";
                break;
            case "5":
                month = "五";
                break;
            case "6":
                month = "六";
                break;
            case "7":
                month = "七";
                break;
            case "8":
                month = "八";
                break;
            case "9":
                month = "九";
                break;
            case "10":
                month = "十";
                break;
            case "11":
                month = "十一";
                break;
            case "12":
                month = "十二";
                break;
        }
        return month;

    }


