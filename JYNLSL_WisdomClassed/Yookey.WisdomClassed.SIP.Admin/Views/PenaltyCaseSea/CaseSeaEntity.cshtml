    //恢复至未处理
    function CancelHandle() {
        var id = $("#Id").val(); //案件编号
        var url = '@Url.Action("CancelHandle", "PenaltyCaseAjax")';
        if (confirm('你确定需要将该案件恢复成未处理吗？')) {
            AjaxJson(url, { caseInfoId: id }, function (data) {
                if (data.rtState == 1) {
                    //调用进行修改案件的状态
                    alertDialogCallBack("案件恢复成功,该页面即将关闭,请重新打开！", 2, function () {
                        setTimeout(function () {
                            cancle();
                        }, 500);
                    });
                }
            });
        }
    }



