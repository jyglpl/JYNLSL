    function CaseHandle() {
        var id = $("#Id").val();  //案件编号
        var caseHandle = '@Url.Action("CaseHandle")';
        var width = 850;
        var height = 540;
        Dialog((caseHandle + "?id=" + id + "&rnd=" + Math.random()), "CaseHandle", "案件处理", parseInt(width), parseInt(height));
