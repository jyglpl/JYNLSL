<script>
   
    function removeDate() {
        var que = $("#Quarter").val();
        $("#StartTime").val("");
        $("#EndTime").val("");
        if (que == null || que == "") {
            $("#dMonth").show();
            $("#DrpMonth").show();
        } else {
            $("#dMonth").hide();
            $("#DrpMonth").hide();
        }
       
        
    }
    /*
    * 计算会计月日期区间
    */
    function changeDate() {
        
        $("#Quarter").val("");
        var year = $("#DrpYear").val();
        var month = $("#DrpMonth").val();
        var startTime = "StartTime";
        var endTime = "EndTime";
        $.ajax({
            cache: true,
            type: "POST",
            datatype: 'json',
            data: {
                year: year,
                month: month,
                firstControlId: startTime,
                secondControlId: endTime
            },
            url: '@Url.Action("AjaxLoadDateRange", "EvaluationLog")',
            async: false,
            success: function (data) {
                eval(data);
            }
        });
    }

