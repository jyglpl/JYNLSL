    $(document).ready(function () {

        $("#CourseType").val(@Model.CourseType);
        $("#Score").val(@Model.Score);

        //课程类型改变事件
        $("#CourseType").change(function () {
            ChangnType($(this).val());
        });
        ChangnType($("#CourseType").val());
        CoverAjaxUpload($("#btnPortrait"), $("#imgCover"), $("#Cover"));

    });

    function ChangnType(courseType) {
        var sel = courseType;
        if (sel == 4) {
            $("#trSource").hide();
            $("#trContent").hide();
            $("#trTime").hide();
            $("#trCover").hide();
            $("#linkAudio").hide();
            $("#LinkMv").hide();
            $("#txtFile").show();
            $("#txtLink").hide();
        } else if (sel == 1 || sel == 2) {
            if (sel == 1) {
                $("#linkAudio").show();
                $("#LinkMv").show();
                $("#trSource").show();
                $("#trContent").hide();
                $("#trTime").show();
                $("#trCover").show();
            }
            else {
                $("#linkAudio").hide();
                $("#LinkMv").hide();
                $("#trSource").show();
                $("#trContent").hide();
                $("#trTime").show();
                $("#trCover").show();
                $("#txtFile").show();
                $("#txtLink").hide();
            }
        } else {
            $("#trSource").show();
            $("#trContent").show();
            $("#trTime").show();
            $("#trCover").show();
            $("#linkAudio").hide();
            $("#LinkMv").hide();
            $("#txtFile").show();
            $("#txtLink").hide();
        }
    }


    /*
    * 封面图片上传
    * 添加人：周 鹏
    * 添加时间：2014-11-15
    */
    function CoverAjaxUpload(buttonId, imageId, hiddenId) {
        /* 
        *buttonId---上传按钮的Id
        *imageId----为图片Id
        *hiddenId---隐藏控件，为传递到后台的图片路径
        *fileType--附件类型
        */
        new AjaxUpload(buttonId, {
            action: "/Upload/UploadImage",
            responseType: 'json',
            onSubmit: function (file, ext) {
                if (!(ext && /^(jpg|png|jpeg|gif|bmp)$/.test(ext))) {
                    alert('错误：无效的文件扩展名！');
                    return false;
                } else {
                }
            },
            onComplete: function (file, response) {
                if (response.Status != 'error') {
                    hiddenId.val(response.ResourceId);
                    imageId.attr('src', response.ViewAddress);  //显示图片
                } else {
                    alert('错误：上传过程中出现异常！');
                }
            }
        });
    }

    /*
    * 选择接收对象
    */
    function closeZhezhao(pname,pid) {
        $('.zhezhao').hide();
        $("#area").val(pname);
        $("#Receives").val(pid);

    }
    function SelectUser() {

        var url = '@Url.Action("SelectPerson", "System")?Receives=' + $("#Receives").val();
        result = window.showModalDialog(url, window, "dialogWidth:300px;dialogHeight:380px;status:no;");
        result = result.split('|');
        pname = result[0];
        pid = result[1];
        $("#area").val(pname);
        $("#Receives").val(pid);
    }
    function showZhezhao() {
        var url = '@Url.Action("SelectPerson", "System")?Receives=' + $("#Receives").val();
        console.log(url)
        $('.zhezhao iframe').attr('src', url);
        $('.zhezhao').show()
    }

    /*
    * 保存课程
    * 添加人：周 鹏
    * 添加时间：2014-11-15
    */
    function SaveCourse() {
        if (confirm("您确定要修改该课程吗？")) {
            
            $("#Describle").val(uedes.getContent());
            $("#Contents").val(uecon.getContent());
            //$("#StartTime").val($("#txtStartTime").val());
            //$("#EndTime").val($("#txtEndTime").val());

            $.ajax({
                cache: true,
                type: "POST",
                url: '@Url.Action("EditSaveCourse")',
                data: $('#formmain').serialize(),
                async: false,
                datatype: 'json',
                success: function (data) {
                    if (data.rtState == 0) {
                        alert('提示：课件修改成功！');
                        closeDialog();
                        //location.href = "CourseManager";
                    } else {
                        alert('保存出现异常,请联系管理员！');
                    }
                },
                error: function (result) {
                    var b = result;
                }
            });
        }

    }

    function CancelCourse() {
        if (confirm('提示：是否放弃修改？')) {
            closeDialog();
            //location.href = "CourseManager";
        }
    }

    function changeStatus() {
        if ($("#LinkMv").is(':checked')) {
            $("#txtLink").show();
            $("#txtFile").hide();
        }
        else {
            $("#txtFile").show();
            $("#txtLink").hide();
        }
    }
    function changeType() {

        var type = $("#course").val();
        if (type == "1") {
            $("#linkAudio").show();
        }
        else {
            $("#linkAudio").hide();
        }
    }
</script>
