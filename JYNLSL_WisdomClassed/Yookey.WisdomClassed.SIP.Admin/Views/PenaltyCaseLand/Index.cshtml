@using Yookey.WisdomClassed.SIP.Membership
@{
    Layout = null;
    var delete = this.Html.IsAllowed("PenaltyCase", "Delete");
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>案件办理</title>

