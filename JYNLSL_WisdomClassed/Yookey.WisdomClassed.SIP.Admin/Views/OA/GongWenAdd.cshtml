<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>发布公告</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="~/Content/layui/css/layui.css" media="all">

    <!-- LayUI表单 -->
    <!-- UE富文本编辑框 -->

    <script src="~/Content/ueditor/ueditor.config.js"></script>
    <script src="~/Content/ueditor/ueditor.all.js"></script>
    @*<script src="~/Content/ueditor/ueditor.all.min.js"></script>*@
    <link href="~/Content/ueditor/themes/iframe.css" rel="stylesheet" />
    <script src="~/Content/ueditor/lang/zh-cn/zh-cn.js"></script>


    <link href="~/Content/MiNi/demo.css" rel="stylesheet" />
    <script src="~/Content/MiNi/boot.js"></script>

    <style>
        .layui-form-select dl {
            z-index: 1000;
        }
    </style>
</head>
<body>
    <form class="layui-form">
        <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
            <legend>新增公文</legend>
        </fieldset>
        <div class="layui-form-item">
            <label class="layui-form-label" style="width:100px">公文标题：</label>
            <div class="layui-input-inline">
                <input name="title" style="width:900px" class="layui-input" type="text" placeholder="请输入标题" autocomplete="off" lay-verify="title" />
            </div>
        </div>

        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label" style="width:100px">发文单位：</label>
                <div class="layui-input-inline">
                    <input name="danwei"  class="layui-input" type="text" placeholder="请输入发文单位" autocomplete="off" lay-verify="title" />
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label" style="width:100px">完成时限：</label>
                <div class="layui-input-inline">


                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label" style="width:100px">文件编号：</label>
                <div class="layui-input-inline">

                    <input name="wjno" class="layui-input" type="text" placeholder="请输入文件编号" autocomplete="off" lay-verify="title" />
                </div>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">附件：</label>
            <div class="layui-input-block">

                <button type="button" class="layui-btn" id="fileupload">选择</button>
                <label id="filename" name="filename"></label>
                <input name="filepath" id="filepath" hidden="true" />
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label" style="width:100px">接收人：</label>
            <div class="layui-input-block">
                <input id="btnEdit1" allowInput="false" class="mini-buttonedit" onbuttonclick="onButtonEdit" />
                <input name="sendname" id="sendname" hidden="true" lay-verify="sendname" />
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">内容：</label>
            <div class="layui-input-block">
                <textarea id="container" name="content">
                </textarea>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-filter="add" lay-submit="">确定</button>

            </div>
        </div>
    </form>
    <script src="~/Content/layui/layui.js" charset="utf-8"></script>

    <!-- 注意：如果你直接复制所有代码到本地，上述js路径需要改成你本地的 -->
    <script type="text/javascript">



            layui.use(['form', 'upload'],
                function() {
                    var form = layui.form,
                        layer = layui.layer,

                        $ = layui.jquery,
                        upload = layui.upload;
                    var index = parent.layer.getFrameIndex(window.name);

                    //自定义验证规则
                    form.verify({
                        title: function(value) {
                            if (value.length < 5) {
                                return '标题至少得5个字符啊';
                            }
                        },
                        tgxl: function(value) {
                            if (value == '') {
                                return '通知类型不能为空';
                            }
                        },
                        sendname: function(value) {
                            if (value == '') {
                                return '接受人不能为空';
                            }
                        },

                        content: function(value) {


                        }

                    });

                    //监听提交
                    form.on('submit(add)',
                        function (data) {


                            $.ajax({
                                type: "POST",
                                url: "@Url.Action("", "OA")",
                                data: data.field,
                                dataType: "json",
                                success: function(data) {
                                    if (data == '1') {
                                        parent.layer.msg('保存成功');
                                        parent.layer.close(index);

                                    }
                                }
                            });

                            return false;
                        });


                    //文件上传
                    upload.render({
                        elem: '#fileupload',
                        url: '@Url.Action("UploadFile", "OA")',
                        done: function(res) {
                            $("#filename").html(res.name);
                            $("#filename").val(res.name);
                            $("#filepath").val(res.src);

                        }
                    });

            });


            //MiniUi组件
            mini.parse();

            function onButtonEdit(e) {
                var btnEdit = this;

                mini.open({
                    url: '@Url.Action("ChoosePerson", "OA")',
                    title: "选择接收人",
                    width: 350,
                    height: 350,
                    ondestroy: function (action) {

                        if (action == "ok") {
                            var iframe = this.getIFrameEl();

                            var data = iframe.contentWindow.GetData();
                            data = mini.clone(data);
                            btnEdit.setValue(data.id);
                            btnEdit.setText(data.text);
                            $("#sendname").val(data.id);
                       
                        }
                    }
                });

            }



    </script>

</body>
</html>
