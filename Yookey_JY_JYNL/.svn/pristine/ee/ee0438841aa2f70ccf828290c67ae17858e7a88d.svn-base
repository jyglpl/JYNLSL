                { label: "排序编号", name: "OrderNo", index: "OrderNo", hidden: true },
                { label: "状态", name: "RowStatus", index: "RowStatus", hidden: true }
            ],
            viewrecords: true,
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            ondblClickRow: function (rowid, iRow, iCol, e) {
                GetDetail_yiju();
            }

        });
    }

    function GetDetail_yiju() {

