#list {
            padding: 10px;
            background: #efeff4;
        }

            #list .list_top {
                margin-bottom: 10px;
            }

            #list .topLeft {
                width: 80%;
                margin-right: 1%;
                background: white;
                padding: 8px;
                height: 445px;
            }

            #list .topRight {
                width: 19%;
                background: white;
                padding: 8px;
                height: 445px;
            }

            #list .title {
                font-size: 20px;
                color: #0687e1;
