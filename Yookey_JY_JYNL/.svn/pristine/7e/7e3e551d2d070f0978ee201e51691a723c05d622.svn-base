@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>行政许可审批</title>

    <!--框架必需start-->
    <link href="@Url.Content("~/Content/Styles/learunui-framework.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Librarys/jquery/jquery-1.8.2.min.js")"></script>
    <script src="@Url.Content("~/Librarys/learunui-framework.js")"></script>
    <!--框架必需end-->

    <!--jqgrid表格组件start-->
    <script src="@Url.Content("~/Librarys/jqgrid/jquery-ui-custom.min.js")"></script>
    <script src="@Url.Content("~/Librarys/jqgrid/grid.locale-cn.js")"></script>
    <link href="@Url.Content("~/Librarys/jqgrid/css/jqgrid.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Librarys/jqgrid/jqGrid.js")"></script>
    <!--jqgrid表格组件end-->

    <!--布局组件start-->
    <script src="@Url.Content("~/Librarys/layout/splitter.js")"></script>
    <!--布局组件end-->

    <!--日期组件start-->
    <script src="@Url.Content("~/Librarys/datepicker/WdatePicker.js")"></script>
    <!--日期组件end-->

    <!--引入弹窗组件start-->
    <script src="@Url.Content("~/Librarys/lhgdialog/lhgdialog.min.js")" type="text/javascript"></script>
    <!--引入弹窗组件end-->

    <script type="text/javascript">

        //绑定部门（中队）
        function BindDepartment() {
            var departmentId = '@ViewBag.Dept';
            getAjax("@Url.Action("GetDepartmentDropListWorkFlow", "Department", new { area = "CommonModule" })", { companyId: departmentId, controlId: "drpDepartment", defaultSelId: "" }, function (dmsg) {
                eval(dmsg);
                if (departmentId == '')
                    departmentId = $("#drpDepartment").val();
                BindUser(departmentId);
            });
        }

        //绑定人员
        function BindUser(departmentId) {
            getAjax("@Url.Action("GetUserDropList", "User", new { area = "CommonModule" })", { deptId: departmentId, controls: "drpUser" }, function (dmsg) {
                eval(dmsg);
            });
        }

        //加载表格
        function GetGrid() {
            $("#gridTable").jqGrid({
                url: '@Url.Action("GetOpinions", "WorkFlow")',
                datatype: "json",
                height: 192,
                autowidth: true,
                colModel: [
                    { label: "意见内容", name: "Contents", index: "Contents", width: 200 }
                ],
                viewrecords: true,
                rownumbers: false,
                shrinkToFit: false,
                gridview: true,
                onSelectRow: function (rowid, iRow, iCol, e) {
                    var contents = GetJqGridRowValue("#gridTable", "Contents");
                    $("#ApproveIdea").val(contents);
                }
            });
        }

        //确定事件
        function AcceptClick() {
            var idea = $("#ApproveIdea").val();
            if (idea == '') {
                tipDialog('请输入审批意见！', 1, 0);
                return false;
            }

            var dept = $("#drpDepartment").val();
            if (dept == '') {
                tipDialog('请输入所属中队！', 1, 0);
                return false;
            }
            var user = $("#drpUser").val();
            if (user == '') {
                tipDialog('请输入指派人员！', 1, 0);
                return false;
            }
            var apdate = $("#ApproveDate").val();
            var formId = '@ViewBag.FormId';
            var flowName = '@ViewBag.FlowName';
            var etype = '@ViewBag.eType';
            var worklistId = '@ViewBag.WorklistId';
            var isFaster = '@ViewBag.IsFaster';

            var url = '@Url.Action("PetitionApproveDept", "WorkFlow")';
            if (isFaster == '1') {
                url = '@Url.Action("PetitionApproveDept", "WorkFlow")';
            }
            AjaxJson(url, { formId: formId, flowName: flowName, eType: etype, idea: idea, ideadate: apdate, worklistId: worklistId, isSaveIdea: '@ViewBag.IsLoadOp', user: user }, function (data) {
                var api = frameElement.api, w = api.opener;
                w.ApplyReturn(data, isFaster);
            });
        }
    </script>
</head>
<body>
    <form id="form1" style="margin: 10px">

        <script type="text/javascript">
            $(document).ready(function () {
                GetGrid();
                BindDepartment();
            });
        </script>
        <div style="height: 29px;">
            <div style="float: left; line-height: 26px; width: 49%; font-size: 14px;"">
                所属中队
                 <select id="drpDepartment" class="txtselect" style="width: 100px;" onchange="javascript:BindUser(this.value);"></select>
                    
            </div>
            <div style="float: left; line-height: 26px; width: 49%; font-size: 14px;"">
                <select id="drpUser" class="txtselect" style="width: 100px;"></select>
                转派人员

            </div>
            <div style="float: left; line-height: 26px; width: 49%; font-size: 14px;">
                审批意见
            </div>
            <div style="float: right; text-align: left; line-height: 26px; width: 49%; font-size: 14px;">
                常用意见
            </div>
        </div>
        <div>
            <div class="border" style="float: left; height: 220px; width: 49%;">
                <textarea id="ApproveIdea" style="width: 92%; height: 212px; border: none;"></textarea>
            </div>
            <div class="border" style="float: right; height: 220px; width: 49%; border-left: none; border-bottom: none;">
                <table id="gridTable"></table>
            </div>
        </div>
        <div style="margin-top: 10px; float: right;">审批日期：@Html.TextBox("ApproveDate", "", new { Value = ViewBag.IdeaDate, @class = "txt Wdate", @onfocus = "WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss'})", @style = "width:162px;border:1px solid #ccc;" })</div>

        
    </form>
</body>
</html>
<script type="text/javascript">
    $('#ApproveIdea').focus();
</script>
