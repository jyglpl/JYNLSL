@using System.Data
@using Yookey.WisdomClassed.SIP.Common
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <script src="@Url.Content("~/Librarys/jquery/jquery-1.8.2.min.js")"></script>
</head>

<style type="text/css">
    html, body {
        font-family: "微软雅黑","宋体";
    }

        html.noscrollX,
        body.noscrollX {
            overflow: auto;
            overflow-x: hidden;
            _overflow-x: hidden;
        }

    body {
        background-color: #fff;
        background-attachment: fixed !important;
    }

        body.nocolor {
            background-color: transparent;
        }

    .n-title {
        border-collapse: separate;
        color: rgb(0, 0, 0);
        display: inline;
        font-family: 宋体;
        font-size: 25px;
        font-weight: bold;
    }

    .new-font {
        font-size: 14px;
        color: red;
    }
</style>

<body>
    <table width="100%">
        <tr>
            <td align="center"><span class="n-title">@ViewBag.Title</span></td>
        </tr>
        <tr>
            <td>
                <label id="content">@Html.Raw(ViewBag.Content)</label>
            </td>
        </tr>
        @{
            var files = ViewData["Files"] as DataTable;
            if (files != null && files.Rows.Count > 0)
            {
            <tr>
                <td class="n-title">附件：</td>
            </tr>
                foreach (DataRow item in files.Rows)
                {
            <tr>
                <td style="height: 40px; border: 1px dashed #DDDDDD">
                    @{
                        <a  href="@(AppConfig.OnlineClassFileUrl + item["FileAddress"])" target="_blank">@item["FileName"]</a>
                    }
                </td>
            </tr>
                }
            }
        }
    </table>
</body>
</html>
