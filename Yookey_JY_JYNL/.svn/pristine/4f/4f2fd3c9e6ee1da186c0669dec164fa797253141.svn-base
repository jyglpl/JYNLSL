    //任务派发
    function dispatch() {
        var parentId = $("#DetailId").val();
        $.ajax({
            cache: true,
            type: "POST",
            url: '@Url.Action("DispatchRandomResult", "DoubleRandom")',
                    data: { parentId: parentId },
                    async: false,
                    datatype: 'json',
                    success: function (data) {
