@{
    ViewBag.Title = "SubInsertTitle";
}
@using Yookey.WisdomClassed.SIP.Model.Exam
@model ExamTypeEntity

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>添加题库</title>
    <!--框架必需start-->
    <link href="@Url.Content("~/Content/Styles/learunui-startmenu.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Styles/learunui-accordion.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Styles/learunui-framework.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Librarys/jquery/jquery-1.8.2.min.js")"></script>
    <script src="@Url.Content("~/Librarys/learunui-framework.js")"></script>
    <!--框架必需end-->
    <link href="@Url.Content("~/Librarys/casepic/css/style.css")" rel="stylesheet" />
    <!--jqgrid表格组件start-->
    <script src="@Url.Content("~/Librarys/jqgrid/jquery-ui-custom.min.js")"></script>
    <script src="@Url.Content("~/Librarys/jqgrid/grid.locale-cn.js")"></script>
    <link href="@Url.Content("~/Librarys/jqgrid/css/jqgrid.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Librarys/jqgrid/jqGrid.js")"></script>
    <!--jqgrid表格组件end-->

    <!--日期组件start-->
    <script src="@Url.Content("~/Librarys/datepicker/WdatePicker.js")"></script>
    <!--日期组件end-->

    <!--布局组件start-->
    <script src="@Url.Content("~/Librarys/layout/splitter.js")"></script>
    <!--布局组件end-->

    <!--引入弹窗组件start-->
    <script src="@Url.Content("~/Librarys/lhgdialog/lhgdialog.min.js")" type="text/javascript"></script>
    <!--引入弹窗组件end-->

    <style type="text/css">
        .ui-jqgrid .ui-jqgrid-htable th {
            height: 28px;
        }

        .ui-state-default, .ui-th-column-header, .ui-th-ltr {
            padding-top: 2px;
            font-size: 15px;
            font-weight: bold;
        }

        .ui-widget-content {
            border-bottom-color: #ccc;
        }

        .ui-th-column, .ui-jqgrid .ui-jqgrid-htable th.ui-th-column {
            background: none;
        }

        .ui-jqgrid tr.jqgrow td {
            white-space: normal !important;
            height: 25px;
            border-bottom: 1px solid #cccccc;
        }

        .ui-state-default, .ui-th-column-header, .ui-th-ltr {
            padding-top: 2px;
            font-size: 15px;
            font-weight: bold;
        }

        .ui-widget-content {
            border-bottom-color: #ccc;
        }
    </style>


    <script type="text/javascript">
        //保存题库
        function SubmitTitle() {
            getAjax('@Url.Action("TitleData", "Exam")', $('#formmain').serialize(), function (data) {
                if (JSON.parse(data).rtState == 1) {
                    alertDialog("创建成功！", 1);
                    cancle();
                }
                else {
                    alertDialog("创建失败！", -1);
                }
            });
        }

        //关闭
        function cancle() {
            var api = frameElement.api;
            api.close();
        }
    </script>

</head>
<body>
    <div>
        <form id="formmain">
            <div id="message" style="display: none; padding: 1px; padding-bottom: 0px;"></div>
            <div class="ScrollBar" style="margin: 1px; overflow: hidden;">
                <div id="basic" class="tabPanel">
                    <table class="casedt">
                        <tr>
                            <th class="formTitle">题库编号：</th>
                            <td class="formValue">
                                @Html.TextBoxFor(x => x.SubJectId, new { @style = "width:100%", @class = "txt" })
                            </td>
                        </tr>
                        <tr>
                            <th class="formTitle">题库名称：</th>
                            <td class="formValue">
                                @Html.TextBoxFor(x => x.SubJectName, new { @style = "width:100%", @class = "txt" })
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </form>
        <table style="width: 100%;">
            <tbody>
                <tr>
                    <td style="text-align: center;">
                        <input type="button" value="保 存" class="btnSearch" onclick="SubmitTitle()" id="btnSave">
                        <input type="button" value="关 闭" class="btnSearch" onclick="cancle();">
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>
